{
  "family": "trading-backend-task",
  "networkMode": "awsvpc",
  "cpu": "512",
  "memory": "1024",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::145023098554:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::145023098554:role/tradingBackendAppRole",
  "containerDefinitions": [{
    "name": "trading-backend",
    "image": "public.ecr.aws/amazonlinux/amazonlinux:latest",
    "portMappings": [{ "containerPort": 8080, "protocol": "tcp" }],
    "essential": true,
    "environment": [
      { "name": "SERVER_PORT", "value": "8080" },
      { "name": "SPRING_PROFILES_ACTIVE", "value": "prod" }
    ],
    "secrets": [
      { "name": "DB_URL", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/db/url" },
      { "name": "DB_USER", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/db/user" },
      { "name": "DB_PASSWORD", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/db/password" },
      { "name": "MAIL_USER", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/mail/user" },
      { "name": "MAIL_PASS", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/mail/pass" },
      { "name": "STRIPE_API_KEY", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/stripe/api-key" },
      { "name": "RAZORPAY_API_KEY", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/razorpay/api-key" },
      { "name": "RAZORPAY_API_SECRET", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/razorpay/api-secret" },
      { "name": "COINGECKO_API_KEY", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/coingecko/api-key" },
      { "name": "OPENAI_API_KEY", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/gemini/api-key" },
      { "name": "GOOGLE_CLIENT_ID", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/google/client-id" },
      { "name": "GOOGLE_CLIENT_SECRET", "valueFrom": "arn:aws:ssm:us-east-1:145023098554:parameter/trading/google/client-secret" }
    ]
  ,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "us-east-1",
        "awslogs-group": "/ecs/trading-backend",
        "awslogs-stream-prefix": "ecs"
      }
    },


    "healthCheck": {
      "command": ["CMD-SHELL","curl -f http://localhost:8080/actuator/health || exit 1"],
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 60
     }
  }]
}
